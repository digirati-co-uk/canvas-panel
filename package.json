{
  "private": true,
  "name": "canvas-panel",
  "workspaces": ["packages/*"],
  "devDependencies": {
    "babel-eslint": "^8.1.0",
    "eslint": "^3.10.2",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-flow": "^2.29.1",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-prettier": "^2.4.0",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "lerna": "^2.4.0",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "@types/react": "^16.0.34"
  },
  "devEngines": {
    "node": "8.x"
  },
  "scripts": {
    "precommit": "lint-staged",
    "build-docs":
      "lerna link && cd packages/canvas-panel-core && yarn run styleguide:build"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.{js,json,scss,md}": ["prettier --write", "git add"]
  }
}
