  "watch": {
    "build": {
      "patterns": ["src"],
      "extensions": "js,scss"
    }
  },
  "dependencies": {
    "@canvas-panel/core": "^0.0.9",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "npm-watch": "0.3.0",
    "nwb": "0.21.5",
    "nwb-sass": "0.8.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Digirati",
  "homepage": "https://digirati.com/",
  "license": "MIT",
