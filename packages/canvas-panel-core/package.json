{
  "name": "@canvas-panel/core",
  "version": "0.0.1",
  "description": "Prototype covering the specification of Canvas Panel, and supporting components for composing bespoke IIIF viewers and lightweight experiences, conforming to the IIIF Presentation 3 specification.",
  "main": "lib/index.js",
  "module": "es/index",
  "jsnext:main": "es/index",
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component --copy-files",
    "clean": "nwb clean-app",
    "start": "npm run styleguide",
    "test": "nwb test-react",
    "prepublish": "npm run build",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server"
  },
  "dependencies": {
    "create-react-context": "^0.1.4",
    "digirati-bem-js": "^1.0.0",
    "manifesto.js": "git://github.com/stephenwf/manifesto.git#0bd82b210d0247537c30a1d78532c00e32fa5fa1",
    "manifold": "git://github.com/IIIF-Commons/manifold.git#v1.2.16",
    "openseadragon": "^2.3.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-draggable": "^3.0.5",
    "react-measure": "^2.0.2",
    "screenfull": "^3.3.2"
  },
  "devDependencies": {
    "create-nwb-webpack-config": "^1.0.0",
    "nwb": "0.18.x",
    "prop-types": "^15.6.0",
    "react-styleguidist": "^6.1.0"
  },
  "author": "Digirati",
  "homepage": "https://digirati.com/",
  "license": "MIT",
  "repository": "https://github.com/digirati-co-uk/canvas-panel"
}
